<h1>SIGN UP</h1>
<%= flash[:alert]%>
<%= form_with model: @user, url: registrations_path do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "sign up" %>
  </div>
<%end%>